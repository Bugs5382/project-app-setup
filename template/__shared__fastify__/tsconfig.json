{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "es2020"
    ],
    "module": "es2020",
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
